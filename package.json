{
  "name": "ledgerpro",
  "version": "1.1.0",
  "description": "LedgerPro - Professional Accounting Software",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build",
    "build:windows": "electron-builder --windows",
    "build:android": "ionic capacitor build android --release",
    "release": "node scripts/create-release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajdipk/Ledgerpro-Extended.git"
  },
  "keywords": [
    "accounting",
    "ledger",
    "business",
    "finance"
  ],
  "author": "Rajdip Kumar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rajdipk/Ledgerpro-Extended/issues"
  },
  "homepage": "https://github.com/rajdipk/Ledgerpro-Extended#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "mongoose": "^7.8.4",
    "razorpay": "^2.9.2"
  },
  "devDependencies": {
    "@capacitor/android": "^5.5.0",
    "@capacitor/cli": "^5.5.0",
    "@capacitor/core": "^5.5.0",
    "@ionic/cli": "^7.1.1",
    "electron": "^25.8.0",
    "electron-builder": "^24.6.3",
    "marked": "^15.0.4",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.rajdipk.ledgerpro",
    "productName": "LedgerPro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "docs/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LedgerPro"
    },
    "publish": {
      "provider": "github",
      "owner": "rajdipk",
      "repo": "Ledgerpro-Extended"
    }
  }
}
